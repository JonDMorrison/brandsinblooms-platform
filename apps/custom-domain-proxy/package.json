{
  "name": "@brands-in-blooms/custom-domain-proxy",
  "version": "1.0.0",
  "description": "Cloudflare Worker for custom domain proxying",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --port 8787 --local",
    "build": "wrangler deploy --dry-run",
    "deploy:production": "wrangler deploy --env production",
    "deploy:preview": "wrangler deploy --env preview"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.0.22",
    "@cloudflare/workers-types": "^4.20230904.0",
    "eslint": "^9.4.1",
    "typescript": "^5.4.2",
    "vitest": "^0.34.6",
    "wrangler": "^3.34.0"
  }
}
