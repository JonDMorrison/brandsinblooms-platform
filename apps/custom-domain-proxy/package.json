{
  "name": "@brands-in-blooms/custom-domain-proxy",
  "version": "1.0.0",
  "description": "Cloudflare Worker for custom domain proxying",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --port 8787 --local",
    "build": "wrangler deploy --dry-run --outdir dist",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@cloudflare/vitest-pool-workers": "^0.1.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "eslint": "^9.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
